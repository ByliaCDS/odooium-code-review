<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- System Parameters (Optional) -->
        <record id="param_default_ai_model" model="ir.config_parameter">
            <field name="key">odooium.default_ai_model</field>
            <field name="value">gpt-4</field>
        </record>
        
        <record id="param_auto_review_enabled" model="ir.config_parameter">
            <field name="key">odooium.auto_review.enabled</field>
            <field name="value">True</field>
        </record>
        
        <record id="param_dashboard_refresh" model="ir.config_parameter">
            <field name="key">odooium.dashboard_refresh_interval</field>
            <field name="value">30</field>
        </record>
        
        <record id="param_max_diff_lines" model="ir.config_parameter">
            <field name="key">odooium.max_diff_lines</field>
            <field name="value">5000</field>
        </record>
    </data>
</odoo>
